<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>controller.Transfer.TransferServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/Transfer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowAccountDetailServlet</servlet-name>
        <servlet-class>controller.SavingAccount.ShowAccountDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowAccountDetailServlet</servlet-name>
        <url-pattern>/SavingAccount</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
